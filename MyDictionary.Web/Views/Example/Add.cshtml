
@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <form method="post" action="/example/add">
                <div class="form-group">
                    <input class="form-control" name="Url" placeholder="Url" width="400" />
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="Description" placeholder="Content" rows="30" width="400"></textarea>

                </div> 
                <button class="btn btn-primary btn-block" type="submit">Add</button>
            </form>
        </div>
    </div>
</div>
@model ListExampleViewDto
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <form action="/home/index">
                <div class="form-group mb-10">
                    <input class="form-control" name="searchValue" placeholder="Search" />
                </div>
                <div class="form-group mb-2">
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @foreach (var example in Model.Examples)
            {
                <span style="color:red;"><a href="/Example/Detail/@example.Id">Detail</a>&emsp; @example.CreatedAt</span>
                {
                    var desLen = example.Description.Length;
                    var descript = desLen >= 200 ? example.Description.Substring(0, 200) : example.Description.Substring(0, desLen / 2);
                    <label>@descript</label><br />
                }
                @foreach (var newWord in example.Words)
                {
                    <span class="badge badge-success">@newWord.Name</span>
                }
                <br />
            }
        </div>
    </div>
</div>
